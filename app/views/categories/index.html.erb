<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @categories.each do |category| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= category.title %></h2>
      </div>

      <div class="text-center">
        <%= link_to "See Posts", category_path(category) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>